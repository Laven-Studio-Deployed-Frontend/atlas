datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model accounts {
  id                    String                  @id @default(cuid())
  name                  String?
  email                 String                  @unique
  password              String
  avatar                String?
  admin                 Boolean                 @default(false)
  created               DateTime                @default(now())
  updated               DateTime                @updatedAt
}